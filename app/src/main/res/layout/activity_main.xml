<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/black"
    android:padding="3dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ecran_2"
        android:layout_width="354dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:cursorVisible="true"
        android:ellipsize="middle"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:maxLines="100"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/ecran_main"
        android:layout_width="354dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:digits="0123456789"
        android:ellipsize="middle"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:orientation="horizontal">
                <!-- Ligne 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn_ac"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="AC"
                        android:textColor="@color/orange" />

                    <Button
                        android:id="@+id/btn_p1"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="(" />

                    <Button
                        android:id="@+id/btn_p2"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text=")" />

                    <Button
                        android:id="@+id/btn_del"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="del" />

                    <Button
                        android:id="@+id/btn_rd_deg"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="Rad"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- Ligne 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn_sin"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="sin" />

                    <Button
                        android:id="@+id/btn_cos"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="cos" />

                    <Button
                        android:id="@+id/btn_tan"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="tan" />

                    <Button
                        android:id="@+id/btn_ln"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="ln" />

                    <Button
                        android:id="@+id/btn_log"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="log" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- Ligne 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btn_fact"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="n!" />

                    <Button
                        android:id="@+id/btn_pow"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="x²" />

                    <Button
                        android:id="@+id/btn_pow_x"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="x^y" />

                    <Button
                        android:id="@+id/btn_racine"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="√" />

                    <Button
                        android:id="@+id/btn_inv"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:text="1/x" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- Ligne 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_7"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="7" />

                    <Button
                        android:id="@+id/btn_8"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="8" />

                    <Button
                        android:id="@+id/btn_9"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="9" />

                    <Button
                        android:id="@+id/btn_div"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:onClick="onButtonClick"
                        android:text="/" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- Ligne 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_4"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="4" />

                    <Button
                        android:id="@+id/btn_5"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="5" />

                    <Button
                        android:id="@+id/btn_6"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="6" />

                    <Button
                        android:id="@+id/btn_mult"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:onClick="onButtonClick"
                        android:text="*" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- Ligne 6 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_1"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn_2"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="2" />

                    <Button
                        android:id="@+id/btn_3"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="3" />

                    <Button
                        android:id="@+id/btn_plus"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:onClick="onButtonClick"
                        android:text="+" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- Ligne 7 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_zero"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="0" />

                    <Button
                        android:id="@+id/btn_point"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:onClick="onButtonClick"
                        android:text="." />

                    <Button
                        android:id="@+id/btn_egale"
                        style="@style/Button_chiffre"
                        android:background="@drawable/chiffre"
                        android:text="=" />

                    <Button
                        android:id="@+id/btn_moins"
                        style="@style/Button_fonction"
                        android:background="@drawable/fonction"
                        android:onClick="onButtonClick"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>